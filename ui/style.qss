QWidget {
    font-family: Segoe UI;
    font-size: 12pt;
}

QPushButton {
    background-color: #f0f0f0;
    padding: 5px 12px;
    border: 1px solid #aaa;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #e0e0e0;
}

QTableWidget {
    gridline-color: #ccc;
    selection-background-color: #d0f0ff;
}

QLabel {
    font-weight: bold;
}

QLineEdit, QTextEdit {
    border: 1px solid #aaa;
    border-radius: 3px;
    padding: 4px;
}
